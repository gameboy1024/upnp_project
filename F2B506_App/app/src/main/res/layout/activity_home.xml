<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="f2b506.tb.f2b506app.HomeActivity">

    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/sante"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Sleep &amp; Rest"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="startRestingActivity"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Walk &amp; Sports"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="startSportsActivity"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Realtime Monitoring"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="startMonitorActivity"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Wristband Alarm"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="startAlarmActivity"/>
</RelativeLayout>
