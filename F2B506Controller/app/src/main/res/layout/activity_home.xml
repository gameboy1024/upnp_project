<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".HomeActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Searching"
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="startControlPoint"/>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/device_table"
        android:stretchColumns="2">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Chair"
                android:id="@+id/textView"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:id="@+id/state_chair"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Bed"
                android:id="@+id/textView1"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:id="@+id/state_bed"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="WristBand"
                android:id="@+id/textView2"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:id="@+id/state_wristband"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Door"
                android:id="@+id/textView3"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:id="@+id/state_door"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Searching"
        android:id="@+id/text_devices"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/device_table"/>
</RelativeLayout>
